@model List<Neo_Genesis_Green_Gold.ViewModels.MenuViewModel>

@{
    ViewBag.Title = "Index";
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Función para manejar el click de los menús principales
        $(".main-menu .ibox-content").click(function () {
            var idMenu = $(this).attr("id"); // Obtenemos el ID del menú clicado
            var menuTitle = $(this).find("h3").text(); // Obtenemos el título del menú

            // Ocultar el menú principal
            $(".main-menu").hide();

            // Actualizar el título del submenú
            $("#menu-title").text(menuTitle);

            // Llamada AJAX para obtener los submenús
            $.ajax({
                url: '@Url.Action("GetMenusByParent", "Home")',
                data: { idPadre: idMenu }, // Enviamos el ID del menú principal
                success: function (data) {
                    // Limpiar submenús anteriores
                    $("#submenu-recursos-humanos").empty();

                    // Iterar sobre los submenús y agregarlos a la vista
                    $.each(data, function (index, menu) {
                        var submenu = `
                            <div class="col-sm-4 ibox-content ibox-content-2 widget iboxShadow">
                                <a href="/${menu.Controlador}/${menu.Accion}" class="button-link">
                                    <center>
                                        <div class="m-b-md">
                                            <i class="fa ${menu.Icono} fa-4x"></i>  <!-- Icono dinámico -->
                                            <h3 class="font-bold no-margins">
                                                ${menu.Nombre_Menu}
                                            </h3>
                                        </div>
                                    </center>
                                </a>
                            </div>`;
                        $("#submenu-recursos-humanos").append(submenu);
                    });

                    // Mostrar los submenús
                    $("#submenu-recursos-humanos").show();
                },
                error: function (xhr, status, error) {
                    alert("Error al cargar submenús: " + error);
                }
            });
        });

        // Botón de retorno para volver al menú principal
        $("#back-to-main").click(function () {
            // Ocultar submenús
            $(".submenu").hide();
            // Mostrar el menú principal
            $(".main-menu").show();
            // Limpiar el título del menú
            $("#menu-title").text("");
        });
    });
</script>


<!-- Renderizar el menú principal dinámicamente -->
<div class="row main-menu">
    @foreach (var menu in Model)
    {
        <div class="col-sm-4 ibox-content ibox-content-2 widget iboxShadow" id="@menu.ID_Menu">
            <center>
                <div class="m-b-md">
                    <i class="fa @menu.Icono fa-4x"></i> <!-- Aquí se carga el ícono dinámico -->
                    <h3 class="font-bold no-margins">@menu.Nombre_Menu</h3>
                </div>
            </center>
        </div>
    }
</div>

<div class="row submenu" id="submenu-recursos-humanos" style="display: none;">
    <div class="ibox-content col-sm-12 marginTop5">
        <button class="btn btn-success" id="back-to-main">
            <i class="fa fa-arrow-left"></i>
        </button>
        <span id="menu-title" class="menu-title"></span>
    </div>
    <!-- Aquí se renderizarán los submenús a través de AJAX -->
</div>
