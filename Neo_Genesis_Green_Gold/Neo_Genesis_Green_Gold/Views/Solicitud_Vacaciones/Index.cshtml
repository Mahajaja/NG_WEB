@model List<Entity.SolicitudesVacacionesViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="ibox-content col-sm-12 marginTop5">
        <button class="btn btn-success" id="back-to-main" onclick="window.history.back();">
            <i class="fa fa-arrow-left"></i>
        </button>
        <span class="menu-title">RECURSOS HUMANOS / SOLICITUD DE VACACIONES</span>
    </div>
</div>

<div class="col-sm-12 form-group margintop1">
    <a href="@Url.Action("Create","Solicitud_Vacaciones")" class="btn btn-success">Nueva Solicitud</a>
</div>

<div id="table-container" class="col-sm-12 ibox-content ">
    <table id="solicitudes" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th><CENTER>#</CENTER></th>
                <th>EMPLEADO</th>
                <th>INICIO</th>
                <th>INCORPORACION</th>
                <th>DIAS SOLICITADOS</th>
                <th>ESTATUS</th>
                <th>ACCIONES</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                int index = 1;
                foreach (var vacacion in Model)
                {
                    <tr>
                        <td><center>@index</center></td>
                        <td>@vacacion.Nombre</td> <!-- Aquí se muestra el nombre del empleado -->
                        <td>@vacacion.FechaInicio</td>
                        <td>@vacacion.FechaIncorporacion</td>
                        <td>@vacacion.DiasSolicitados</td>
                        <td>@vacacion.Estatus</td>

                        <td class="">
                            <center>
                                <a href="@Url.Action("Edit", "Solicitud_Vacaciones", new { id = vacacion.id_vacacion })" class="btn btn-default"><i class="fa fa-edit"></i></a>
                                <a href="@Url.Action("Delete", "Solicitud_Vacaciones", new { id = vacacion.id_vacacion })" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                            </center>
                        </td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="7"><center>No hay solicitudes de vacaciones registradas.</center></td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    var table = $('#solicitudes').DataTable({
        language: {
            "decimal": "",
            "emptyTable": "No hay información",
            "info": "Mostrando _START_ a _END_ de _TOTAL_ Entradas",
            "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
            "infoFiltered": "(Filtrado de _MAX_ total entradas)",
            "infoPostFix": "",
            "thousands": ",",
            "lengthMenu": "Mostrar _MENU_ Entradas",
            "loadingRecords": "Cargando...",
            "processing": "Procesando...",
            "search": "Buscar:",
            "zeroRecords": "Sin resultados encontrados",
            "paginate": {
                "first": "Primero",
                "last": "Ultimo",
                "next": "Siguiente",
                "previous": "Anterior"
            }
        },
    });
</script>
