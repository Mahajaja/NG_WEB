    @RenderSection("scripts", required: false)
    <script>
        jQuery(function ($) {

            $(".sidebar-dropdown > a").click(function () {
                $(".sidebar-submenu").slideUp(200);
                if (
                    $(this)
                        .parent()
                        .hasClass("active")
                ) {
                    $(".sidebar-dropdown").removeClass("active");
                    $(this)
                        .parent()
                        .removeClass("active");
                } else {
                    $(".sidebar-dropdown").removeClass("active");
                    $(this)
                        .next(".sidebar-submenu")
                        .slideDown(200);
                    $(this)
                        .parent()
                        .addClass("active");
                }
            });

            $("#close-sidebar").click(function () {
                $(".page-wrapper").removeClass("toggled");
            });
            $("#show-sidebar").click(function () {
                $(".page-wrapper").addClass("toggled");
            });
        });

        // Función para determinar si la pantalla es grande (ancho superior a 767px)
        function isLargeScreen() {
            return $(window).width() > 767;
        }

        // Función para aplicar o quitar la clase "toggled" según el tamaño de la pantalla
        function toggleToggledClass() {
            var pageWrapper = $(".page-wrapper");
            if (isLargeScreen()) {
                pageWrapper.addClass("toggled");
            } else {
                pageWrapper.removeClass("toggled");
            }
        }

        // Ejecutar la función cuando se carga la página y cuando cambia el tamaño de la ventana
        $(document).ready(function () {
            toggleToggledClass(); // Aplicar la clase al cargar la página
            $(window).resize(function () {
                toggleToggledClass(); // Aplicar la clase cuando cambia el tamaño de la ventana
            });
        });

    </script>

