<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta y títulos -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NG_GREENGOLD</title>
    <!-- Estilos -->
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/font-awesome.min.css")
    @Styles.Render("~/Content/bootstrap-toggle.min.css.css")
   
    @Scripts.Render("~/bundles/modernizr")
    <link rel="icon" href="~/GREEN GOLD.ico" />
    <link href="~/Content/dataTables.bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.min.js"></script>
</head>
<body class="pageBackgroundColor">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- Logo a la izquierda -->
                <center>
                    <a href="@Url.Action("Index","Home")" class="navbar-brand">
                        <img src="~/Content/IMG/Logos/GREEN GOLD.png" class="logoSize" alt="Logo">
                    </a>
                </center>
            </div>

            <!-- Sección de cerrar sesión alineada a la derecha -->
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Contenido de la página -->
    <div class="page-wrapper chiller-theme toggled marginTop5">
        <!-- Sidebar (si lo tienes) -->
        <!-- Contenido principal -->
        <main class="page-content">
            <div class="container-fluid">
                @RenderBody()
            </div>
            <hr class="hrColor" />
            <footer class="footerPadding">
                <p>&copy; @DateTime.Now.Year - NEGO GENESIS GREEN GOLD</p>
            </footer>
        </main>
    </div>

    <!-- Scripts -->
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    @*<script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables.bootstrap.min.js"></script>*@
    @*<script src="~/Scripts/bootstrap-toggle.min.js.js"></script>
    <script src="~/Scripts/select2.min.js"></script>*@
    @RenderSection("scripts", required: false)
    <!-- Tus scripts adicionales -->
</body>
</html>
