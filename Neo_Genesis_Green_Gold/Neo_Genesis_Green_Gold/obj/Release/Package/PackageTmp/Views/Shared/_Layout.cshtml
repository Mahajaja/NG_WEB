<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta y títulos -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NG_GREENGOLD</title>
    <!-- Estilos -->
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/font-awesome.min.css")
    @Styles.Render("~/Content/bootstrap-toggle.min.css.css")

    @Scripts.Render("~/bundles/modernizr")
    <link rel="icon" href="~/GREEN GOLD.ico" />
    <link href="~/Content/dataTables.bootstrap.min.css" rel="stylesheet" />
</head>
<body class="pageBackgroundColor">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <!-- Flexbox para alinear el logo y el botón en una fila -->
            <div class="row" style="display: flex; align-items: center;">
                <!-- Logo a la izquierda -->
                <div class="col-xs-10">
                    <a href="@Url.Action("Index","Home")" class="navbar-brand">
                        <img src="~/Content/IMG/Logos/GREEN GOLD.png" class="logoSize" alt="Logo" style="max-height: 50px;">
                    </a>
                </div>
                <!-- Botón de Cerrar sesión alineado a la derecha -->
                <div class="col-xs-2 text-right">
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-default navbar-btn"><i class="fa fa-sign-out"></i></button>
                    }
                    @* Eliminar margenes para el botón en dispositivos móviles *@
                </div>
            </div>
        </div>
    </div>

    <!-- Contenido de la página -->
    <div class=" marginTop5">
        <main class="page-content">
            <div class="container-fluid">
                @RenderBody()
            </div>
            <hr class="hrColor" />
            <footer class="footerPadding">
                <p>&copy; @DateTime.Now.Year - NEGO GENESIS GREEN GOLD</p>
            </footer>
        </main>
    </div>

    <!-- Scripts -->
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables.bootstrap.min.js"></script>
</body>
</html>
