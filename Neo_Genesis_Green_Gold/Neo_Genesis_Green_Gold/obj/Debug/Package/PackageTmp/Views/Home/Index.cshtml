@model List<Neo_Genesis_Green_Gold.ViewModels.MenuViewModel>

@{
    ViewBag.Title = "Index";
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Función para manejar el click de los menús principales
        $(document).on("click", ".main-menu .ibox-content", function () {
            // Obtener el ID del menú clicado, eliminando el prefijo 'menu-'
            var idMenu = $(this).attr("id").replace("menu-", "");
            var menuTitle = $(this).find("h3").text(); // Obtener el título del menú

            console.log(idMenu); // Verificar que el idMenu tiene el valor correcto

            // Ocultar el menú principal
            $(".main-menu").hide();

            // Hacer la llamada AJAX para obtener los submenús basados en idPadre
           $.ajax({
    url: '@Url.Action("GetMenusByParent", "Home")',
    data: { idPadre: idMenu, menuTitle: menuTitle }, // Enviar el ID del menú y el título
    success: function (data) {
        // Reemplazar el contenido de #submenu-recursos-humanos con el HTML recibido
        $("#submenu-recursos-humanos").html(data);

        // Mostrar los submenús
        $("#submenu-recursos-humanos").show();
    },
    error: function (xhr, status, error) {
        alert("Error al cargar submenús: " + error);
    }
});

        });

        // Botón de retorno para volver al menú principal
        $("#back-to-main").click(function () {
            // Ocultar submenús
            $(".submenu").hide();
            // Mostrar el menú principal
            $(".main-menu").show();
            // Limpiar el título del menú
            $("#menu-title").text("");
        });
    });
</script>

<!-- Renderizar el menú principal dinámicamente -->
<div class="row main-menu">
    @foreach (var menu in Model)
    {
        <div class="col-sm-4 ibox-content ibox-content-2 widget iboxShadow" id="menu-@menu.ID_Menu">
            <center>
                <div class="m-b-md">
                    <i class="fa @menu.Icono fa-4x"></i> <!-- Aquí se carga el ícono dinámico -->
                    <h3 class="font-bold no-margins">@menu.Nombre_Menu</h3>
                </div>
            </center>
        </div>
    }
</div>

<!-- Sección de submenús que se muestra al hacer clic en un menú -->
<div class="row submenu" id="submenu-recursos-humanos" style="display: none;">
    <div class="ibox-content col-sm-12 marginTop5">
        <button class="btn btn-success" id="back-to-main">
            <i class="fa fa-arrow-left"></i>
        </button>
        <span id="menu-title" class="menu-title"></span>
    </div>
    <!-- Aquí se renderizarán los submenús a través de AJAX -->
</div>
